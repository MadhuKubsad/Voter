<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/loginregister"
        android:scaleType="fitXY"/>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="88dp"
        android:padding="5dp"
        android:src="@drawable/logo" />


    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_current_password"
        android:layout_width="match_parent"
        android:layout_below="@+id/logo"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/ed_current"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/text_mobile"
            android:backgroundTint="@color/app_theme"
            android:drawablePadding="10dp"
            android:inputType="textPassword"
            android:fontFamily="@font/centurygothic"
            android:hint="Current Password"
            android:textColor="@color/black" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_new_password"
        android:layout_width="match_parent"
        android:layout_below="@+id/text_current_password"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/ed_new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/text_mobile"
            android:backgroundTint="@color/app_theme"
            android:drawablePadding="10dp"
            android:fontFamily="@font/centurygothic"
            android:hint="New Password"
            android:inputType="textPassword"
            android:maxLength="12"
            android:textColor="@color/black" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_confirm"
        android:layout_width="match_parent"
        android:layout_below="@+id/text_new_password"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/ed_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm Password"
            android:drawablePadding="10dp"
            android:inputType="textPassword"
            android:fontFamily="@font/centurygothic"
            android:textColor="@color/black"
            android:backgroundTint="@color/app_theme"/>
    </android.support.design.widget.TextInputLayout>


    <Button
        android:id="@+id/update"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_below="@+id/text_confirm"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:background="@drawable/login_button"
        android:fontFamily="@font/centurygothic"
        android:text="Update"
        android:textColor="@color/white"
        android:textStyle="bold" />

</RelativeLayout>