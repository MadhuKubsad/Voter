<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:id="@+id/mainviewfarmerlist_ll">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        android:id="@+id/farmerimagelayout_ll">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="4dp"
            android:layout_gravity="center"
            app:civ_border_width="1dp"
            android:src="@mipmap/ic_launcher_round"
            android:id="@+id/image_iv"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:visibility="visible"
        android:id="@+id/farmernameandcodelist_ll">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Namelabel_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:gravity="start"
                android:visibility="gone"
                android:text="Farmer Name"
                android:textColor="#5C5757"
                android:textStyle="bold"
                android:textSize="13dp"
                android:fontFamily="serif"/>

            <TextView
                android:id="@+id/Name_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/black"
                android:textSize="13dp"
                android:fontFamily="serif"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/Msglabel_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:gravity="start"
                android:text="Farmer ID"
                android:textColor="#5C5757"
                android:textStyle="bold"
                android:visibility="gone"
                android:textSize="13dp"
                android:fontFamily="serif"/>

            <TextView
                android:id="@+id/MsgData_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.1"
                android:text=""
                android:textColor="@color/black"
                android:textSize="10dp"
                android:fontFamily="serif"/>


            <TextView
                android:layout_width="0.9dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:gravity="start"
                android:text="Pond"
                android:visibility="gone"
                android:textColor="#5C5757"
                android:textStyle="bold"
                android:textSize="13dp"
                android:fontFamily="serif"/>

            <TextView
                android:id="@+id/time_tv"
                android:layout_width="0.9dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/black"
                android:textSize="13dp"
                android:fontFamily="serif"/>
            <TextView
                android:id="@+id/userId_tv"
                android:layout_width="0.9dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:visibility="gone"
                android:textColor="@color/black"
                android:textSize="13dp"
                android:fontFamily="serif"/>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        android:id="@+id/nofarmerRecords_ll">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center_horizontal"
            android:text="Currently No  Records"
            android:textColor="@color/colorAccent"
            android:textSize="20dp" />

    </LinearLayout>
    <TextView
        android:id="@+id/villageID_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />

</LinearLayout>