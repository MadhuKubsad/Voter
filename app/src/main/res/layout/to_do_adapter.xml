<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#5CFFFFFF">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/check_box"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/complete"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/check"
                android:visibility="gone"/>



            <TextView
                android:id="@+id/todo_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="15sp"
                android:textColor="@color/design_default_color_primary_dark"
                android:fontFamily="@font/centurygothic"/>


            <TextView
                android:id="@+id/tiltle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                android:layout_below="@+id/todo_details"
                android:ellipsize="end"
                android:textSize="15sp"
                android:textColor="@color/light_black"
                android:fontFamily="@font/centurygothic"/>

            <TextView
                android:id="@+id/date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tiltle"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:textSize="12sp"
                android:textColor="#7A7979"
                android:fontFamily="@font/centurygothic"/>

            <ImageView
                android:id="@+id/priority_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/date_time"
                android:layout_alignEnd="@+id/date_time"
                android:layout_marginTop="-11dp"
                android:layout_marginEnd="-181dp" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>