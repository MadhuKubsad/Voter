<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/loginregister"
        android:scaleType="fitXY"/>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66dp"
        android:src="@drawable/logo" />
        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_voter"
            android:layout_width="match_parent"
            android:layout_below="@+id/logo"
            android:layout_marginTop="40dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/ed_voterid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/text_mobile"
                android:drawablePadding="10dp"
                android:fontFamily="@font/centurygothic"
                android:hint="Voter Id"
                android:inputType="text"
                android:textColor="@color/black" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_phn"
            android:layout_width="match_parent"
            android:layout_below="@+id/text_voter"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/ed_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/text_mobile"
                android:drawablePadding="10dp"
                android:fontFamily="@font/centurygothic"
                android:hint="Mobile Number"
                android:inputType="number"
                android:textColor="@color/black" />
        </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_mobile"
        android:layout_width="match_parent"
        android:layout_below="@+id/text_phn"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/ed_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/text_mobile"
            android:drawablePadding="10dp"
            android:fontFamily="@font/centurygothic"
            android:hint="Subject"
            android:inputType="text"
            android:textColor="@color/black" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_mail"
        android:layout_width="match_parent"
        android:layout_below="@+id/text_mobile"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/ed_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your Feedback"
            android:drawablePadding="10dp"
            android:inputType="text"
            android:fontFamily="@font/centurygothic"
            android:textColor="@color/black"

            />
    </android.support.design.widget.TextInputLayout>


        <Button
            android:id="@+id/btn_submit"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_below="@+id/text_mail"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp"
            android:background="@drawable/login_button"
            android:fontFamily="@font/centurygothic"
            android:text="submit"
            android:textColor="@color/white" />
    </RelativeLayout>
</ScrollView>