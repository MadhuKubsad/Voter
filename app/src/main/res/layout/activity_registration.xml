<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Login.Registration_Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/loginregister"
        android:scaleType="fitXY"
        android:scaleY="1"
        android:scaleX="1"
        />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:src="@drawable/logo" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_user"
            android:layout_width="match_parent"
            android:layout_below="@+id/logo"
            android:layout_marginTop="60dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/ed_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/text_mobile"
                android:backgroundTint="@color/app_theme"
                android:drawableLeft="@drawable/ic_person_black_24dp"
                android:drawablePadding="10dp"
                android:fontFamily="@font/centurygothic"
                android:hint="User Name"
                android:textColor="@color/black" />
        </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_mobile"
        android:layout_width="match_parent"
        android:layout_below="@+id/text_user"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/ed_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/text_mobile"
            android:backgroundTint="@color/app_theme"
            android:drawableLeft="@drawable/ic_phone_android_black_24dp"
            android:drawablePadding="10dp"
            android:fontFamily="@font/centurygothic"
            android:hint="Mobile No"
            android:inputType="number"
            android:maxLength="12"
            android:textColor="@color/black" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_mail"
        android:layout_width="match_parent"
        android:layout_below="@+id/text_mobile"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/ed_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email id"
            android:drawableLeft="@drawable/ic_email_black_24dp"
            android:drawablePadding="10dp"
            android:inputType="textEmailAddress"
            android:fontFamily="@font/centurygothic"
            android:textColor="@color/black"
            android:backgroundTint="@color/app_theme"/>
    </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_gender"
            android:layout_width="match_parent"
            android:layout_below="@+id/text_mail"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/ed_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Gender"
                android:drawableLeft="@drawable/ic_account_circle_black_24dp"
                android:drawablePadding="10dp"
                android:inputType="text"
                android:fontFamily="@font/centurygothic"
                android:textColor="@color/black"
                android:backgroundTint="@color/app_theme"/>
        </android.support.design.widget.TextInputLayout>
        <Spinner
            android:id="@+id/gender_spinner"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/text_gender"></Spinner>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/gender_spinner"
            android:background="@color/app_theme"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_assembly"
            android:layout_width="match_parent"
            android:layout_below="@+id/gender_spinner"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/ed_assembley"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Assembley"
                android:drawableLeft="@drawable/ic_account_balance_black_24dp"
                android:drawablePadding="10dp"
                android:inputType="text"
                android:fontFamily="@font/centurygothic"
                android:textColor="@color/black"
                android:backgroundTint="@color/app_theme"/>
        </android.support.design.widget.TextInputLayout>

        <Spinner
            android:id="@+id/assembley_spinner"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/text_assembly"></Spinner>
        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/assembley_spinner"
            android:background="@color/app_theme"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_ward"
            android:layout_width="match_parent"
            android:layout_below="@+id/assembley_spinner"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/ed_ward"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ward"
                android:drawableLeft="@drawable/ic_business_black_24dp"
                android:drawablePadding="10dp"
                android:inputType="text"
                android:fontFamily="@font/centurygothic"
                android:textColor="@color/black"
                android:backgroundTint="@color/app_theme"/>
        </android.support.design.widget.TextInputLayout>
        <Spinner
            android:id="@+id/ward_spinner"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/text_ward"></Spinner>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/ward_spinner"
            android:background="@color/app_theme"/>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_booth"
            android:layout_width="match_parent"
            android:layout_below="@+id/ward_spinner"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/ed_booth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Booth"
                android:drawableLeft="@drawable/ic_dashboard_black_24dp"
                android:drawablePadding="10dp"
                android:inputType="text"
                android:fontFamily="@font/centurygothic"
                android:textColor="@color/black"
                android:backgroundTint="@color/app_theme"/>
        </android.support.design.widget.TextInputLayout>
        <Spinner
            android:id="@+id/booth_spinner"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/text_booth"></Spinner>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/booth_spinner"
            android:background="@color/app_theme"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_password"
            android:layout_width="match_parent"
            android:layout_below="@+id/booth_spinner"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/ed_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/ic_vpn_key_black_24dp"
                android:drawablePadding="10dp"
                android:fontFamily="@font/centurygothic"
                android:textColor="@color/black"
                android:backgroundTint="@color/app_theme"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_confirmpassword"
            android:layout_width="match_parent"
            android:layout_below="@+id/text_password"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/ed_passwordconfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/ic_vpn_key_black_24dp"
                android:drawablePadding="10dp"
                android:fontFamily="@font/centurygothic"
                android:textColor="@color/black"
                android:backgroundTint="@color/app_theme"/>


        </android.support.design.widget.TextInputLayout>

        <ImageView
            android:id="@+id/match"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignTop="@+id/text_confirmpassword"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="32dp"
            android:src="@drawable/check"
            android:visibility="gone"/>


        <Button
            android:id="@+id/login"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_below="@+id/text_confirmpassword"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/login_button"
            android:fontFamily="@font/centurygothic"
            android:text="Register"
            android:layout_marginBottom="20dp"
            android:textColor="@color/white"
            android:visibility="visible" />

    </RelativeLayout>
</ScrollView>