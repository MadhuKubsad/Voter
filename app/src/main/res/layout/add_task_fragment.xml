<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/loginregister"
        android:scaleType="fitXY"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_user"
        android:layout_width="match_parent"
        android:layout_below="@+id/camera"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/ed_wt_done"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/text_mobile"
            android:backgroundTint="@color/app_theme"
            android:drawablePadding="10dp"
            android:fontFamily="@font/centurygothic"
            android:hint="What is to be done?"
            android:textColorHint="@color/app_theme"
            android:textColor="@color/black" />
    </android.support.design.widget.TextInputLayout>



    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_desrption"
        android:layout_width="match_parent"
        android:layout_below="@+id/text_user"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/ed_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/text_mobile"
            android:backgroundTint="@color/app_theme"
            android:drawablePadding="10dp"
            android:fontFamily="@font/centurygothic"
            android:hint="Task Description"
            android:textColorHint="@color/app_theme"
            android:textColor="@color/black" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_mobile"
        android:layout_width="match_parent"
        android:layout_below="@+id/text_desrption"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ed_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/text_mobile"
            android:backgroundTint="@color/app_theme"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_date_range_black_24dp"
            android:fontFamily="@font/centurygothic"
            android:hint="Date"
            android:editable="false"
            android:textColorHint="@color/app_theme"
            android:inputType="number"
            android:maxLength="12"
            android:textColor="@color/black" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_mail"
        android:layout_width="match_parent"
        android:layout_below="@+id/text_mobile"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ed_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Time"
            android:drawablePadding="10dp"
            android:editable="false"
            android:inputType="textEmailAddress"
            android:drawableLeft="@drawable/ic_timer_black_24dp"
            android:fontFamily="@font/centurygothic"
            android:textColor="@color/black"
            android:textColorHint="@color/app_theme"
            android:backgroundTint="@color/app_theme"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_gender"
        android:layout_width="match_parent"
        android:layout_below="@+id/text_mail"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ed_priority"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Priority"
            android:drawablePadding="10dp"
            android:textColorHint="@color/app_theme"
            android:inputType="text"
            android:fontFamily="@font/centurygothic"
            android:textColor="@color/black"
            android:backgroundTint="@color/app_theme"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.v7.widget.AppCompatSpinner
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/spinner_data"
        android:layout_below="@+id/text_gender"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/blue_border"
       >

    </android.support.v7.widget.AppCompatSpinner>

    <Button
        android:id="@+id/button_ok"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_below="@+id/spinner_data"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="82dp"
        android:background="@drawable/login_button"
        android:fontFamily="@font/centurygothic"
        android:text="Done"
        android:textColor="@color/white" />
</RelativeLayout>
</ScrollView>